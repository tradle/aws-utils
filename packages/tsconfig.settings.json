{
  "compilerOptions": {
    "diagnostics": true,
    "skipLibCheck": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules", "../"]
    }
  },
  "types": ["node", "aws-sdk", "pino", "tape", "sinon", "lodash", "@types/lru-cache", "@tradle/errors"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
